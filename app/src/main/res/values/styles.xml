<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RoundImageView">
        <attr name="riv_radius" format="dimension" />
        <attr name="riv_is_circular" format="boolean" />
    </declare-styleable>
    <style name="MainMenuText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">#000000</item> <!-- 设置背景颜色 -->
        <item name="android:textColor">#FFFFFF</item> <!-- 设置文本颜色 -->
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/textcolor</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/black</item>
    </style>

</resources>